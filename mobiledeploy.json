{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "postfixAppName": {
      "type": "string",
      "maxLength": 16,
      "metadata": {
        "description": "Only alphabet and number. length: ~16"
      }
    },
    "Location": {
      "type": "string",
      "defaultValue": "Japan West",
      "allowedValues": [
        "Japan West",
        "Japan East",
        "East Asia",
        "Southeast Asia"
      ]
    }
  },
  "variables": {
    "postfixName": "[parameters('postfixAppName')]",
    "fePlanName": "-cb-fe-asp-dev",
    "apiAppName": "-cb-fe-aa-dev",

    "url": ".azurewebsites.net",
    "urlScm": ".scm.azurewebsites.net",
    "apiName": "[concat(variables('postfixName'),variables('apiAppName'))]",
    "apiSiteName": "[concat(variables('apiName'),variables('url'))]",
    "apiScmSiteName": "[concat(variables('apiName'),variables('urlScm'))]"
  },
  "resources": [{
 "type": "Microsoft.Web/serverfarms",
 "apiVersion": "2015-08-01",
 "name": "[concat(variables('postfixName'),variables('fePlanName'))]",
 "location": "[parameters('Location')]",
 "sku": {
   "name": "F1",
   "tier": "Free",
   "capacity": 1
 }
}, {
    "type": "Microsoft.Web/sites",
    "kind": "api",
    "name": "[variables('apiName')]",
    "apiVersion": "2015-08-01-preview",
    "location": "[parameters('Location')]",
    "properties": {
      "name": "[variables('apiName')]",
      "hostNames": [
        "[variables('apiSiteName')]"
      ],
      "enabledHostNames": [
        "[variables('apiSiteName')]",
        "[variables('apiScmSiteName')]"
      ],
      "hostNameSslStates": [{
        "name": "[variables('apiSiteName')]",
        "sslState": 0,
        "thumbprint": null,
        "ipBasedSslState": 0
      }, {
        "name": "[variables('apiScmSiteName')]",
        "sslState": 0,
        "thumbprint": null,
        "ipBasedSslState": 0
      }],
      "serverFarmId": "[resourceId('Microsoft.Web/serverFarms', concat(variables('postfixName'),variables('fePlanName')))]"
    },
    "dependsOn": [
      "[resourceId('Microsoft.Web/serverFarms', concat(variables('postfixName'),variables('fePlanName')))]"
    ]
  }]
}
